<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.codedead.advancedpassgen.domain.controller.SettingsWindowController"
          prefHeight="400.0" prefWidth="600.0">

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints/>
    </rowConstraints>

    <TabPane GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Tab fx:id="tabGeneral" text="%general" closable="false">

            <GridPane alignment="CENTER">

                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>

                <CheckBox GridPane.rowIndex="0" GridPane.columnIndex="0" text="%autoUpdate">
                    <GridPane.margin>
                        <Insets bottom="3" left="3" right="3" top="3"/>
                    </GridPane.margin>
                </CheckBox>

                <CheckBox GridPane.rowIndex="1" GridPane.columnIndex="0" text="%retainWindowSize">
                    <GridPane.margin>
                        <Insets bottom="3" left="3" right="3" top="3"/>
                    </GridPane.margin>
                </CheckBox>

                <CheckBox GridPane.rowIndex="2" GridPane.columnIndex="0" text="%showPasswordStrength">
                    <GridPane.margin>
                        <Insets bottom="3" left="3" right="3" top="3"/>
                    </GridPane.margin>
                </CheckBox>

                <CheckBox GridPane.rowIndex="3" GridPane.columnIndex="0" text="%saveOptions">
                    <GridPane.margin>
                        <Insets bottom="3" left="3" right="3" top="3"/>
                    </GridPane.margin>
                </CheckBox>

                <GridPane GridPane.rowIndex="4">
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>

                    <Label GridPane.columnIndex="0" text="%defaultCharacterSet">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </Label>

                    <TextField GridPane.columnIndex="1">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </TextField>

                </GridPane>

            </GridPane>

        </Tab>

        <Tab fx:id="tabAdvanced" text="%advanced" closable="false">

        </Tab>
    </TabPane>

    <GridPane GridPane.columnIndex="0" GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Button GridPane.columnIndex="0" text="%reset" maxWidth="Infinity">
            <GridPane.margin>
                <Insets bottom="3" left="3" right="3" top="3"/>
            </GridPane.margin>
        </Button>

        <Button GridPane.columnIndex="1" text="%save" maxWidth="Infinity">
            <GridPane.margin>
                <Insets bottom="3" left="3" right="3" top="3"/>
            </GridPane.margin>
        </Button>
    </GridPane>

</GridPane>
