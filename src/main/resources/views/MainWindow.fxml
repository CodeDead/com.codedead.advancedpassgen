<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import com.codedead.advancedpassgen.domain.controls.NumberTextField?>

<GridPane prefHeight="370" prefWidth="560" xmlns="http://javafx.com/javafx/10.0.2-internal"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.codedead.advancedpassgen.domain.controller.ui.MainWindowController">

    <rowConstraints>
        <RowConstraints/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>

    <MenuBar GridPane.rowIndex="0">
        <Menu text="%file">
            <MenuItem fx:id="mniExport" text="%export"/>
            <SeparatorMenuItem/>
            <MenuItem onAction="#exitAction" fx:id="mniExit" text="%exit"/>
        </Menu>
        <Menu text="%tools">
            <MenuItem fx:id="mniSettings" onAction="#settingsAction" text="%settings"/>
        </Menu>
        <Menu text="%helpMenu">
            <MenuItem fx:id="mniHelp" onAction="#helpAction" text="%help"/>
            <SeparatorMenuItem/>
            <MenuItem fx:id="mniUpdate" text="%checkForUpdates"/>
            <SeparatorMenuItem/>
            <MenuItem fx:id="mniHomepage" onAction="#homepageAction" text="%homepage"/>
            <MenuItem fx:id="mniLicense" onAction="#licenseAction" text="%license"/>
            <SeparatorMenuItem/>
            <MenuItem fx:id="mniDonate" onAction="#donateAction" text="%donate"/>
            <MenuItem fx:id="mniAbout" text="%about" onAction="#aboutAction"/>
        </Menu>
    </MenuBar>

    <GridPane GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>
        <TabPane>
            <Tab fx:id="tabOptions" closable="false" text="%options">
                <GridPane alignment="CENTER">

                    <columnConstraints>
                        <ColumnConstraints/>
                        <ColumnConstraints/>
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>

                    <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="%lengthValue">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </Label>
                    <NumberTextField fx:id="numLength" minValue="1" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                     text="1">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </NumberTextField>

                    <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="%amount">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </Label>
                    <NumberTextField fx:id="numAmount" minValue="1" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                     text="1">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </NumberTextField>

                    <TitledPane GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"
                                text="%characters">
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints/>
                                <ColumnConstraints/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>

                            <CheckBox fx:id="chbSmallLetters" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                      text="%smallLetters">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </CheckBox>

                            <CheckBox fx:id="chbCapitalLetters" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                      text="%capitalLetters">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </CheckBox>

                            <CheckBox fx:id="chbSpecialCharacters" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                      text="%specialCharacters">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </CheckBox>

                            <CheckBox fx:id="chbNumbers" GridPane.columnIndex="1" GridPane.rowIndex="1" text="%numbers">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </CheckBox>

                            <CheckBox fx:id="chbSpaces" GridPane.columnIndex="0" GridPane.rowIndex="2" text="%spaces">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </CheckBox>

                            <CheckBox fx:id="chbBrackets" GridPane.columnIndex="1" GridPane.rowIndex="2"
                                      text="%brackets">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </CheckBox>
                        </GridPane>
                    </TitledPane>

                    <Button GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" text="%generate"
                            maxWidth="Infinity">
                        <GridPane.margin>
                            <Insets bottom="3" top="3"/>
                        </GridPane.margin>
                    </Button>
                </GridPane>
            </Tab>

            <Tab fx:id="tabAdvanced" closable="false" text="%advanced">
                <GridPane alignment="CENTER">
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>

                    <CheckBox fx:id="chbDuplicates" GridPane.rowIndex="0" GridPane.columnIndex="0" text="%duplicates">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </CheckBox>
                    <CheckBox fx:id="chbAdvanced" GridPane.rowIndex="1" GridPane.columnIndex="0"
                              text="%advancedOptions">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </CheckBox>

                    <TitledPane GridPane.rowIndex="2" GridPane.columnIndex="0" text="%advancedOptions">
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints/>
                                <ColumnConstraints/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>

                            <CheckBox fx:id="chbToBase64" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                      GridPane.columnSpan="3"
                                      text="%convertToBase64">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </CheckBox>

                            <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="%minimumLength">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </Label>

                            <NumberTextField fx:id="ntfMinLength" minValue="1" GridPane.columnIndex="1"
                                             GridPane.rowIndex="1"
                                             GridPane.columnSpan="2" text="1">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </NumberTextField>

                            <Label GridPane.rowIndex="2" GridPane.columnIndex="0" text="%maximumLength">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </Label>

                            <NumberTextField fx:id="ntfMaxLength" minValue="1" GridPane.columnIndex="1"
                                             GridPane.rowIndex="2"
                                             GridPane.columnSpan="2" text="1">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </NumberTextField>

                            <Label GridPane.rowIndex="3" GridPane.columnIndex="0" text="%characterSet">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </Label>
                            <TextField fx:id="txtCharacterSet" GridPane.columnIndex="1" GridPane.rowIndex="3"
                                       GridPane.columnSpan="2">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </TextField>

                            <Label GridPane.rowIndex="4" GridPane.columnIndex="0" text="%wordList">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </Label>
                            <TextField fx:id="txtWordListPath" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </TextField>
                            <Button GridPane.columnIndex="2" GridPane.rowIndex="4" text="..."
                                    onAction="#chooseWordListAction">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </Button>

                            <Label GridPane.rowIndex="5" GridPane.columnIndex="0" text="%seed">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </Label>
                            <NumberTextField fx:id="ntfSeed" GridPane.columnIndex="1" GridPane.rowIndex="5">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </NumberTextField>
                            <Button GridPane.columnIndex="2" GridPane.rowIndex="5" text="..."
                                    onAction="#generateSeedAction">
                                <GridPane.margin>
                                    <Insets bottom="3" left="3" right="3" top="3"/>
                                </GridPane.margin>
                            </Button>
                        </GridPane>
                    </TitledPane>

                    <Button GridPane.columnIndex="0" GridPane.rowIndex="3" text="%generate"
                            maxWidth="Infinity">
                        <GridPane.margin>
                            <Insets bottom="3" top="3"/>
                        </GridPane.margin>
                    </Button>
                </GridPane>
            </Tab>

            <Tab fx:id="tabList" closable="false" text="%list">
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>

                    <TableView GridPane.rowIndex="0">
                        <columns>
                            <TableColumn text="%password"/>
                            <TableColumn text="%length"/>
                            <TableColumn text="%strength"/>
                        </columns>
                    </TableView>

                    <GridPane GridPane.rowIndex="1">
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Button text="%export" GridPane.columnIndex="0" maxWidth="Infinity">
                            <GridPane.margin>
                                <Insets bottom="5" left="5" right="5" top="5"/>
                            </GridPane.margin>
                        </Button>

                        <Button text="%generate" GridPane.columnIndex="1" maxWidth="Infinity">
                            <GridPane.margin>
                                <Insets bottom="5" left="5" right="5" top="5"/>
                            </GridPane.margin>
                        </Button>
                    </GridPane>
                </GridPane>
            </Tab>

            <Tab fx:id="tabAdvisor" closable="false" text="%advisor">
                <GridPane alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints/>
                        <ColumnConstraints/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>

                    <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="%passwordValue">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </Label>

                    <PasswordField fx:id="pwfAdvisorPassword" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </PasswordField>

                    <ProgressBar fx:id="pgbAdvisorStrength" progress="0" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                 GridPane.columnSpan="2" maxWidth="Infinity">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </ProgressBar>

                    <Button GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" maxWidth="Infinity"
                            text="%advise" onAction="#adviseAction">
                        <GridPane.margin>
                            <Insets bottom="3" left="3" right="3" top="3"/>
                        </GridPane.margin>
                    </Button>

                </GridPane>
            </Tab>
        </TabPane>
    </GridPane>
</GridPane>

